#!/bin/sh
# ~/.mkshrc
#

# Do make a history
HISTFILE=~/.mksh/history
HISTSIZE=5000

#### SAFETY ####

alias rm='rm -iv'
alias mv='mv -iv'
alias cp='cp -iv'
alias ln='ln -i'

#alias ..='cd ../'
#alias ...='cd ../../'
#alias ....='cd ../../../'
alias ls='ls --color=auto'
alias la='ls -la --color=auto'
alias ll='ls -ll --color=auto'
alias md='mkdir -p -v'
alias rd='rmdir -v'
alias h='fc -l'
alias p='pwd'
alias manb='man -H'
alias grep='grep --color=auto'
alias curl='curl -C - -LO'
alias add='su butch install'
alias upd='su butch update'
alias search='su butch search'

# REBOOT/SHUTDOWN
alias reboot='su /sbin/reboot'
alias poweroff='su /sbin/poweroff'
alias shutdown='su /sbin/halt'

# Space on drive
alias disk='du -h | sort -n -r |more'

alias preview='feh -g 450x300+500+200 -R .01 --zoom fill'
#alias rec='ffmpeg -f x11grab -s 1280x800 -an -i :0.0 -c:v libvpx -b:v 5M -crf 10 -quality realtime -y -loglevel quiet'
alias rec='ffmpeg1 -f x11grab -s 1920x1080 -an -i :0.0 -c:v libvpx -b:v 5M -crf 10 -quality realtime -y -loglevel quiet'
alias info='info.sh'
alias todo='vim ~/todo'
alias zzz='su pm-suspend'
alias shootme='DISPLAY=:0 import -window root ~/Pictures/scrots/scrot-$(date +%m-%d-%Y-%H-%M-%S).png'
alias free='top -n 1 | head -n 5 | tail -n 2'
alias ping='ping -c3'
alias mc='mc -a'
alias g='git'
alias gc='git commit -m "adds and tweaks"'
alias umount='su umount /media/$1'
alias view='imlib2_view'
alias grab='imlib2_grab'
alias stime='su ntpd -dnq -p pool.ntp.org'

PS1=""
 case `id -u` in
 	0) PS1="${PS1}# ";;
 	*) PS1="${PS1}$ ";;
 esac
